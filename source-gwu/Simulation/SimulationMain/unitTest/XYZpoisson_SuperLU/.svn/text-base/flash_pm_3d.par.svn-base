# 	Runtime parameters for the x, y Periodic and z Neuman Poisson problem.

# Wavenumbers in x, y and z for the solution.
waven_x = 1.
waven_y = 1.
waven_z = 1.

# Phase angle for the solution in x (in rads)
alpha_x = 0.
alpha_y = 0.

#       Grid dimensionality and geometry
geometry	= "cartesian"

#       Size of computational volume
xmin		=  0.
xmax		=  1.
ymin		=  0.
ymax		=  1.
zmin		=  0.
zmax		=  1.

#       Boundary conditions
#xl_boundary_type = "outflow"
#xr_boundary_type = "outflow"
#yl_boundary_type = "outflow"
#yr_boundary_type = "outflow"
#zl_boundary_type = "outflow"
#zr_boundary_type = "outflow"

xl_boundary_type = "dirichlet"
xr_boundary_type = "dirichlet"
yl_boundary_type = "dirichlet"
yr_boundary_type = "dirichlet"
zl_boundary_type = "dirichlet"
zr_boundary_type = "dirichlet"


#      Poisson Solver Boundary Conditions
xl_mg_boundary_type = "outflow"
xr_mg_boundary_type = "outflow"
yl_mg_boundary_type = "outflow"
yr_mg_boundary_type = "outflow"
zl_mg_boundary_type = "outflow"
zr_mg_boundary_type = "outflow"

#       Simulation (grid, time, I/O) parameters
run_comment	= "x,y,z Neuman BCs Poisson problem"
log_file	= "GRID_Poisson_XYZNeu.log"
basenm		= "GRID_Poisson_XYZNeu_"
restart         = .false.
checkPointFileNumber=1
plotFileNumber  = 1
nend            = 1
tmax            = 1. 

plot_var_1	= "vphi"
plot_var_2      = "vanl"

convertToConsvdInMeshInterp = .false.

checkpointFileIntervalTime = 0.
checkpointFileIntervalStep = 1

writeStatSummary = .true.
eachProcWritesSummary = .false.

#	AMR parameters
nblockx	        = 1
nblocky	        = 1
nblockz         = 1
lrefine_min	= 1
lrefine_max     = 1
nrefs           = 1

#	Flux Conservation for AMR
flux_correct    = .true.


# Pfft Parameters:
# Use Central Finite Difference discretization operator:
gr_pfftDiffOpDiscretize = 2
gr_mgDiffOpDiscretize   = 2

# Force Direct solve in this level:
#maxDirectSolveLevel=1

# Setup of pfft:
pfft_setupOnce = .false.


