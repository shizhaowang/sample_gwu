# parameter file for Eos unit test using Helmholtz
# (Note: The Helmholtz unit test needs a small global grid (max 8**3) 
# to prevent extreme initial values and subsequent non-convergence in EOS -
# "Error message is [Eos] Error: too many iterations in Helmholtz Eos")

eos_coulombMult = 0.0

# AMR parameters
lrefine_max = 1
lrefine_min = 1

sim_tempMin = 1.e6
sim_tempMax = 1.e8
sim_densMin = 1.e-2
sim_densMax = 1.e8
sim_xnMin = 1.e-10
sim_xnMax = 1.0

refine_var_1 = "dens"
refine_var_2 =  "pres"
refine_var_3 = "temp"
refine_var_4 = "he4"

smallt = 1.e-10

xmin = 0.e0
xmax = 1.e0
ymin = 0.e0
ymax = 1.e0
zmin = 0.e0
zmax = 1.e0

geometry = "cartesian"

iGridSize = 8
jGridSize = 8
kGridSize = 8

nblockx = 1
nblocky = 1
nblockz = 1
#eintSwitch     = 1.e-4

#output the derived variables
plot_grid_var_1 = "drv1"
plot_grid_var_2 = "drv2"
