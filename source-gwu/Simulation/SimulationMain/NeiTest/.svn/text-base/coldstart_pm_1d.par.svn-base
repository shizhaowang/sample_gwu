# Parameters for the example setup
rho_ambient	= 2.e-16
t_ambient	= 1.e4
t_perturb       = 1.e6
radius          = .2
vel_init        = 3.e5

# use Godunov method
igodu    = 1

# position of the temperature step
xstep    = 1.5e7

# small definition
smallx = 1e-30
smalle = 1e-30
smallp = 1e-30
smlrho = 1e-30

# for starting a new run
restart         = .false.
checkpointFileNumber = 0
plotFileNumber = 0

# dump checkpoint files every checkpointFileIntervalTime seconds
checkpointFileIntervalTime = 50.

# dump plot files every plotFileIntervalTime seconds
plotFileIntervalTime = 0.

# go for nend steps or tmax seconds, whichever comes first
nend            = 100000000
tmax            = 50.

# initial, and minimum timesteps
dtinit           = 1.0e-2
dtmin           = 1.0e-20
dtmax           = 1.0e-1


# Grid geometry
geometry = "cartesian"

# Size of computational volume
xmin		= 0.0
xmax		= 1.e8
ymin		= 0.0
ymax		= 1.0
zmin		= 0.0
zmax		= 1.0

# Boundary conditions
xl_boundary_type      = "outflow"
xr_boundary_type      = "outflow"

# Variables for refinement test
refine_var_1    = "dens"
refine_var_2    = "pres"
refine_var_3    = "none"
refine_var_4    = "none"

# Refinement levels
lrefine_max     = 6
lrefine_min     = 1

# Number of lowest-level blocks
nblockx         = 5
nblocky         = 1
nblockz         = 1

# Hydrodynamics parameters
cfl	        = 0.8

# Simulation-specific parameters
basenm          = "neitest_6lev_"
run_number      = "001"
run_comment     = "testing the NEI module in Flash 3.0"
log_file        = "flash_neitest.log"

plot_var_1 = "temp"
plot_var_2 = "C1"
plot_var_3 = "C2"
plot_var_4 = "C3"
plot_var_5 = "C4"
plot_var_6 = "C5"
plot_var_7 = "C6"
plot_var_8 = "C"
eint_switch     = 1.e-4
